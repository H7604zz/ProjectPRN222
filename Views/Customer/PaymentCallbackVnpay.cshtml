@model ProjectPrn222.Models.VNPay.PaymentResponseModel

@{
    ViewData["Title"] = "Kết Quả Giao Dịch";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header text-center">
            <h3>Kết Quả Giao Dịch VNPay</h3>
        </div>
        <div class="card-body">
            <table class="table table-bordered">
                <tr>
                    <th>Mã đơn hàng:</th>
                    <td>@Model.OrderId</td>
                </tr>
                <tr>
                    <th>Mô tả giao dịch:</th>
                    <td>@Model.OrderDescription</td>
                </tr>
                <tr>
                    <th>Mã giao dịch:</th>
                    <td>@Model.TransactionId</td>
                </tr>
                <tr>
                    <th>Phương thức thanh toán:</th>
                    <td>@Model.PaymentMethod</td>
                </tr>
                <tr>
                    <th>Mã thanh toán:</th>
                    <td>@Model.PaymentId</td>
                </tr>
                <tr>
                    <th>Trạng thái:</th>
                    <td>
                        @if (Model.Success)
                        {
                            <span class="badge bg-success">Thành công</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Thất bại</span>
                        }
                    </td>
                </tr>
                <tr>
                    <th>Mã phản hồi VNPay:</th>
                    <td>@Model.VnPayResponseCode</td>
                </tr>
            </table>
        </div>
        <div class="card-footer text-end">
            <a asp-action="Index" asp-controller="Home" class="btn btn-primary">Quay lại trang chủ</a>
        </div>
    </div>
</div>

