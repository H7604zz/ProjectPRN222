@{
	ViewData["Title"] = "Thanh toán";
}

<body>
	<!--PreLoader-->
	<div class="loader">
		<div class="loader-inner">
			<div class="circle"></div>
		</div>
	</div>

	<div class="checkout-section mt-3">
		<div class="container">
			<div class="row">
				<div class="col-lg-8">
					<div class="card-body">
						<div class="billing-address-form">
							<form action="index.html">
								<p><input type="text" placeholder="Tên khách hàng"></p>
								<p><input type="email" placeholder="Email"></p>
								<p><input type="text" placeholder="Địa chỉ giao hàng"></p>
								<p><input type="tel" placeholder="Số điện thoại"></p>
								<p><textarea name="bill" id="bill" cols="30" rows="10" placeholder="Để lại lời nhắn"></textarea></p>
							</form>
						</div>
					</div>
				</div>

				<div class="col-lg-4">
					<div class="order-details-wrap">
						<table class="order-details">
							<thead>
								<tr>
									<th>Chi tiết đơn hàng</th>
									<th>Giá</th>
								</tr>
							</thead>
							<tbody class="order-details-body">
								<tr>
									<td>Strawberry</td>
									<td>$85.00</td>
								</tr>
								<tr>
									<td>Berry</td>
									<td>$70.00</td>
								</tr>
								<tr>
									<td>Lemon</td>
									<td>$35.00</td>
								</tr>
							</tbody>
							<tbody class="checkout-details">
								<tr>
									<td>Tạm tính</td>
									<td>$190</td>
								</tr>
								<tr>
									<td>Phí vận chuyển</td>
									<td>$50</td>
								</tr>
								<tr>
									<td>Tổng cộng</td>
									<td>$240</td>
								</tr>
							</tbody>
						</table>
						<a href="#" class="boxed-btn">Đặt hàng</a>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- end check out section -->
</body>